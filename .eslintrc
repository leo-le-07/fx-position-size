{
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import",
    "flowtype",
    "prettier"
  ],
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "describe": true,
    "expect": true,
    "fakeAction": true,
    "jest": true,
    "window": true,
    "document": true,
    "Response": true,
    "fetch": true,
    "Blob": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"]
  }
}
